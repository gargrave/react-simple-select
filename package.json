{
  "name": "@gargrave/react-simple-select",
  "version": "0.1.8",
  "description": "A simple select-like component built with React",
  "author": "Gabe Hargrave <gkhargrave@gmail.com>",
  "repository": "https://github.com/gargrave/react-simple-select",
  "license": "MIT",
  "main": "dist/react-simple-select.cjs.js",
  "module": "dist/react-simple-select.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean:dist": "yarn rimraf dist",
    "prebuild": "jest && yarn clean:dist && yarn build:types && yarn build:styles",
    "build": "rollup -c",
    "build:types": "tsc --emitDeclarationOnly",
    "build:examples": "node ./src/scripts/buildExamples.js && yarn prettier:examples",
    "build:styles": "node ./src/scripts/buildStyles.js",
    "prettier:examples": "prettier --config ./.prettierrc --write 'src/components/Select/styleguide/*.md'",
    "release": "yarn build && yarn np --yolo && yarn styleguide:build",
    "lint": "eslint --ext .ts,.tsx ./src",
    "test": "jest --watch",
    "styleguide": "styleguidist server",
    "styleguide:build": "yarn build:examples && styleguidist build"
  },
  "peerDependencies": {
    "react": "^16.11.0",
    "react-dom": "^16.11.0"
  },
  "devDependencies": {
    "@babel/core": "^7.7.2",
    "@babel/plugin-proposal-class-properties": "^7.7.0",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.7.4",
    "@babel/plugin-proposal-optional-chaining": "^7.6.0",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@babel/preset-env": "^7.7.1",
    "@babel/preset-react": "^7.7.0",
    "@babel/preset-typescript": "^7.7.2",
    "@babel/runtime": "^7.7.2",
    "@testing-library/jest-dom": "^4.2.3",
    "@testing-library/react": "^9.3.2",
    "@types/jest": "^24.0.22",
    "@types/node": "^12.12.7",
    "@typescript-eslint/eslint-plugin": "^2.6.1",
    "@typescript-eslint/parser": "^2.6.1",
    "babel-eslint": "^10.0.2",
    "babel-jest": "^24.8.0",
    "babel-loader": "^8.0.6",
    "css-loader": "^3.2.0",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-loader": "^3.0.2",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^2.2.0",
    "faker": "^4.1.0",
    "husky": "^3.0.9",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.8.0",
    "loader-utils": "^1.2.3",
    "nanoid": "^2.1.6",
    "node-sass": "^4.13.0",
    "np": "^5.1.3",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "react": "^16.11.0",
    "react-docgen-typescript": "^1.15.1",
    "react-dom": "^16.11.0",
    "react-styleguidist": "^10.2.0",
    "rimraf": "^2.6.3",
    "rollup": "^1.26.3",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-postcss": "^2.0.3",
    "sass-loader": "^7.2.0",
    "style-loader": "^1.0.0",
    "typescript": "^3.7.2",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
